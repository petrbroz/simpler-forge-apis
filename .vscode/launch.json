    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run Mocha Tests",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "envFile": "${workspaceFolder}/.env",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}